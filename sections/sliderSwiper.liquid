{% schema %}
{
  "name": "Slider de Imágenes",
  "settings": [
    {
      "type": "image_picker",
      "id": "slider_images",
      "label": "Imágenes del Slider",
      "info": "Selecciona las imágenes que deseas mostrar en el slider."
    },
    {
      "type": "checkbox",
      "id": "enable_slider",
      "label": "Habilitar slider",
      "default": true
    }
  ],
  "presets": [
    {
      "category": "Productos",
      "name": "Slider de Imágenes"
    }
  ]
}
{% endschema %}

<div id="{{ section_id }}" class="{{ section_classes }}">
  <div class="swiper-container {{ section_id }}__swiper-container">
    <div class="swiper-wrapper">
      {% for image in section.settings.slider_images %}
        <div class="swiper-slide {{ section_id }}__swiper-slide">
          <img src="{{ image }}" alt="Slide" width="600" height="400">
        </div>
      {% endfor %}
    </div>
    <div class="swiper-pagination {{ section_id }}__swiper-pagination"></div>
    <!-- Si deseas agregar controles de navegación, puedes descomentar las siguientes líneas -->
    <!-- <div class="swiper-button-prev {{ section_id }}__swiper-button-prev"></div> -->
    <!-- <div class="swiper-button-next {{ section_id }}__swiper-button-next"></div> -->
  </div>
</div>

{% if section.settings.enable_slider != false %}
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var {{ section_id }}Swiper = new Swiper('.{{ section_id }}__swiper-container', {
        loop: true,
        autoplay: {
          delay: 5000,
          disableOnInteraction: false,
        },
        pagination: {
          el: '.{{ section_id }}__swiper-pagination',
          clickable: true,
        },
        // Si deseas agregar controles de navegación, puedes descomentar las siguientes líneas
        // navigation: {
        //   nextEl: '.{{ section_id }}__swiper-button-next',
        //   prevEl: '.{{ section_id }}__swiper-button-prev',
        // },
      });
    });
  </script>
{% endif %}

<style>
  /* Estilos CSS personalizados para el slider */
  .{{ section_id }}__swiper-container {
    width: 100%;
    height: 100%;
  }
  .{{ section_id }}__swiper-slide img {
    width: 100%;
    height: auto;
  }
</style>
