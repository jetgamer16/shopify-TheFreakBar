{% schema %}
{
  "name": "Slider de Im치genes",
  "settings": [
    {
      "type": "text",
      "id": "slider_images",
      "label": "URLs de las im치genes del Slider",
      "info": "Ingresa las URLs de las im치genes que deseas mostrar en el slider. Separa cada URL con una coma (,)."
    },
    {
      "type": "checkbox",
      "id": "enable_slider",
      "label": "Habilitar slider",
      "default": true
    }
  ],
  "presets": [
    {
      "category": "Productos",
      "name": "Slider de Im치genes"
    }
  ]
}
{% endschema %}

<div id="{{ section_id }}" class="{{ section_classes }}">
  <div class="swiper-container {{ section_id }}__swiper-container">
    <div class="swiper-wrapper">
      {% assign images = section.settings.slider_images | split: ',' %}
      {% for image in images %}
        <div class="swiper-slide {{ section_id }}__swiper-slide">
          <img src="{{ image | strip }}" alt="Slide" width="600" height="400">
        </div>
      {% endfor %}
    </div>
    <div class="swiper-pagination {{ section_id }}__swiper-pagination"></div>
  </div>
</div>

{% if section.settings.enable_slider != false %}
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var {{ section_id }}Swiper = new Swiper('.{{ section_id }}__swiper-container', {
        loop: true,
        autoplay: {
          delay: 5000,
          disableOnInteraction: false,
        },
        pagination: {
          el: '.{{ section_id }}__swiper-pagination',
          clickable: true,
        },
      });
    });
  </script>
{% endif %}

<style>
  /* Estilos CSS personalizados para el slider */
  .{{ section_id }}__swiper-container {
    width: 100%;
    height: 100%;
  }
  .{{ section_id }}__swiper-slide img {
    width: 100%;
    height: auto;
  }
</style>
